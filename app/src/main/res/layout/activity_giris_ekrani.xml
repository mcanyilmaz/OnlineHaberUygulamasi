    android:layout_height="match_parent"
    tools:context="com.example.can.yenihaberuygulama.GirisEkrani">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Her Olaydan Haberdar Ol"
